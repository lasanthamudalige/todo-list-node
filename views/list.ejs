<%- include("header"); -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <!-- For each loop to replace normal for loop -->
  <% newListItems.forEach(function(item) { %>
  <form action="/delete" method="post">
    <div class="item">
      <!-- Using onchange="this.form.submit" u can trigger submit action without submit button -->
      <input type="checkbox" name="checkbox" value="<%=item.id%>" onchange="this.form.submit()"/>
      <p><%= item.name %></p>
    </div>
    <!-- Create a new hidden input to get list name -->
    <input type="hidden" name="listName" value="<%= listTitle %>">
  </form>
  <% }); %>

  <form class="item" action="/" method="post">
    <input
      type="text"
      name="NewItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value=<%=listTitle %>>+</button>
  </form>
</div>

<%- include("footer"); -%>
